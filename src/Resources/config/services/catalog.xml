<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />
        <service id="bitbag_sylius_catalog_plugin.catalog_rule_checker.sort_by_code" class="BitBag\SyliusCatalogPlugin\Checker\Rule\SortByCodeRuleChecker">
            <tag name="bitbag_sylius_catalog_plugin.catalog_rule_checker" type="sort_by_code" label="bitbag_sylius_catalog_plugin.ui.form.catalog_rule.sort_by_code" form-type="BitBag\SyliusCatalogPlugin\Form\Type\SortByCodeConfigurationType" />
            <argument type="service" id="sylius.repository.product" />
        </service>
        <service id="bitbag_sylius_catalog_plugin.catalog_rule_checker.price_higher_than" class="BitBag\SyliusCatalogPlugin\Checker\Rule\PriceHigherThanRuleChecker">
            <tag name="bitbag_sylius_catalog_plugin.catalog_rule_checker" type="price_higher_than" label="bitbag_sylius_catalog_plugin.ui.form.catalog_rule.price_higher_than" form-type="BitBag\SyliusCatalogPlugin\Form\Type\ChannelBasedPriceHigherThanConfigurationType"/>
            <argument type="service" id="sylius.context.channel" />
        </service>
        <service id="bitbag_sylius_catalog_plugin.catalog_rule_checker.sort_by_name" class="BitBag\SyliusCatalogPlugin\Checker\Rule\SortByNameRuleChecker">
            <tag name="bitbag_sylius_catalog_plugin.catalog_rule_checker" type="sort_by_name" label="bitbag_sylius_catalog_plugin.ui.form.catalog_rule.sort_by_name" form-type="BitBag\SyliusCatalogPlugin\Form\Type\SortByNameConfigurationType"/>
            <argument type="service" id="sylius.context.locale" />
        </service>
    </services>
</container>
