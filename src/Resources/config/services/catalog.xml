<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />
        <service id="bitbag_sylius_catalog_plugin.catalog_rule_checker.contains_catalog" class="BitBag\SyliusCatalogPlugin\Checker\Rule\ContainsCatalogRuleChecker">
            <tag name="bitbag_sylius_catalog_plugin.catalog_rule_checker" type="contains_catalog" label="bitbag_sylius_catalog_plugin.ui.form.catalog_rule.contains_catalog" form-type="BitBag\SyliusCatalogPlugin\Form\Type\ContainsCatalogConfigurationType" />
            <argument type="service" id="sylius.repository.product" />
        </service>
        <service id="bitbag_sylius_catalog_plugin.catalog_rule_checker.price_higher_than" class="BitBag\SyliusCatalogPlugin\Checker\Rule\PriceHigherThanRuleChecker">
            <tag name="bitbag_sylius_catalog_plugin.catalog_rule_checker" type="price_higher_than" label="bitbag_sylius_catalog_plugin.ui.form.catalog_rule.price_higher_than" form-type="BitBag\SyliusCatalogPlugin\Form\Type\PriceHigherThanConfigurationType"/>
        </service>
    </services>
</container>
