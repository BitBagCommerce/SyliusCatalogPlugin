<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping
        xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <entity name="BitBag\SyliusCatalogPlugin\Entity\Catalog" table="bitbag_catalog_catalog">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="startDate" column="start_date" type="datetime" nullable="true"/>
        <field name="endDate" column="end_date" type="datetime" nullable="true"/>
        <many-to-one field="ruleId" target-entity="BitBag\SyliusCatalogPlugin\Entity\CatalogRuleInterface" inversed-by="catalog">
            <join-column name="ruleId" referenced-column-name="id" nullable="true" />
        </many-to-one>

    </entity>
</doctrine-mapping>
