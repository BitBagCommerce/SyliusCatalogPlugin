<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping
        xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <entity name="BitBag\SyliusCatalogPlugin\Entity\Catalog" table="bitbag_catalog_catalog">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="startDate" column="start_date" type="datetime" nullable="true"/>
        <field name="endDate" column="end_date" type="datetime" nullable="true"/>
        <field name="code" column="code" type="string" nullable="true"/>
        <field name="connectingRules" column="connecting_rules" type="string" />
        <one-to-many field="rules" target-entity="BitBag\SyliusCatalogPlugin\Entity\CatalogRuleInterface" mapped-by="catalog" orphan-removal="true">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>

        <many-to-many field="associatedProducts" target-entity="Sylius\Component\Core\Model\ProductInterface" >
            <join-table name="bitbag_catalog_catalog_products">
                <join-columns>
                    <join-column name="catalog_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="product_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>
