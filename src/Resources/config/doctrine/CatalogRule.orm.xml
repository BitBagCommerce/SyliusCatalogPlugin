<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <mapped-superclass name="BitBag\SyliusCatalogPlugin\Entity\CatalogRule" table="bitbag_catalog_rule">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="type" column="type" type="string" nullable="true" />
        <field name="configuration" column="configuration" type="array" />

        <many-to-one field="catalog" target-entity="BitBag\SyliusCatalogPlugin\Entity\CatalogInterface" inversed-by="rules">
            <join-column name="catalog_id" referenced-column-name="id" nullable="true" />
        </many-to-one>

    </mapped-superclass>

</doctrine-mapping>
